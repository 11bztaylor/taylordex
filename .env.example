# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=taylordx
POSTGRES_USER=taylordx
POSTGRES_PASSWORD=your_secure_password_here

# Redis Configuration  
REDIS_PASSWORD=your_redis_password_here

# JWT & Session Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Enhanced Logging Configuration
LOG_LEVEL=info          # debug|info|warn|error
DEBUG_MODE=false        # true|false - enables verbose debugging
LOG_REQUESTS=false      # true|false - enables request/response logging
LOG_DB_QUERIES=false    # true|false - enables database query logging  
LOG_AUTH=false          # true|false - enables authentication logging
LOG_RBAC=false          # true|false - enables RBAC decision logging

# Development Settings
NODE_ENV=development

# Service Discovery
ENABLE_DISCOVERY=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100